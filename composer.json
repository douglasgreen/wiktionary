{
    "name": "douglasgreen/wiktionary",
    "description": "Process Wiktionary data dumps",
    "license": "GPL-3",
    "autoload": {
        "psr-4": {
            "Wiktionary\\": "src/"
        }
    },
    "require": {
        "php": ">=8.2.0"
    },
    "require-dev": {
        "phpmd/phpmd": "^2.15",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "fix-php": "./vendor/bin/phpcbf",
        "lint-php": "./vendor/bin/phpcs && ./vendor/bin/phpmd bin,src text phpmd.xml"
    }
}
