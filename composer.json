{
    "name": "douglasgreen/wiktionary",
    "description": "Process Wiktionary data dumps",
    "license": "MIT",
    "type": "project",
    "autoload": {
        "psr-4": {
            "DouglasGreen\\Wiktionary\\": "src/"
        }
    },
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "phpmd/phpmd": "^2.15",
        "phpstan/phpstan": "^1.10",
        "rector/rector": "^1.0",
        "symplify/easy-coding-standard": "^12.1"
    },
    "scripts": {
        "lint": [
            "ecs",
            "rector --dry-run",
            "./run_phpmd.sh",
            "./run_phpstan.sh"
        ],
        "lint:fix": [
            "ecs --fix",
            "rector"
        ]
    }
}
